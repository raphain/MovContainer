@model MovContainer.Models.ContainerCategory

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Confirma a exclusão?</h3>
<div>
    <h4>Categoria de Container</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Descrição")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar</a>
    </form>
</div>
