@model MovContainer.Models.Container

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Confirma a exclusão?</h3>
<div>
    <h4>Container</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Cliente")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Número")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Tipo")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContainerType.Description)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayName("Status")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Description)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayName("Categoria")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar</a>
    </form>
</div>
